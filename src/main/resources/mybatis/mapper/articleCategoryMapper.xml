    <sql id="Base_Column_List" >
        article_id, category
    </sql>

    <insert id="insertCategories" parameterType="java.util.List" >
        insert into t_article_category (
            <include refid="Base_Column_List" />
        ) values
        <foreach collection="list" item="item" separator=",">
            ( #{item.articleId}, #{item.category} )
        </foreach>
    </insert>
    
    <select id="selectStatsByCategory" resultType="map" >
        select category, count(*) as count from t_article_category
            where userid = #{userid}
            group by category
    </select>

